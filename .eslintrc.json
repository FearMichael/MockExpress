{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "indent": "off",
        "class-methods-use-this": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "info",
                    "warn"
                ]
            }
        ]
    }
}